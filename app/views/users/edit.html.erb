<h1 align = "center">Edit your account</h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user , :html => {class: "form-horizontal", role: "form"}) do |n| %>
    <div class="form-group">
    <div class="control-label col-sm-2">
    <%= n.label :username %>
    </div>
    <div class="col-sm-8">
      <%= n.text_field :username, class: "form-control", placeholder: "Enter username...", autofucs: true %>
    </div>
  </div> <!--form group-->
  <div class="form-group">
  <div class="control-label col-sm-2">
    <%= n.label :email %>
  </div>
  <div class="col-sm-8">
    <%= n.email_field :email, class: "form-control", placeholder: "Enter email..." %>
  </div>
</div>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= n.label :password %>
  </div>
  <div class="col-sm-8">
    <%= n.password_field :password, class: "form-control", placeholder: "Enter password..." %>
  </div>
</div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= n.submit "Update account", class: "btn btn-primary btn-default "%>
    </div>
  </div>
<% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and go back to articles listing", articles_path%> ]
    </div>
  </div>
</div>
