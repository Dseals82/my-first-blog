<% if @article.errors.any?%>

<ul>
    <% @article.errors.full_messages.each do |msg|%>
    <h2>The following errors have prevented the Article from being created!</h2>
    <li><%= msg%></li>
    <% end%>
</ul>
<% end%>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article , :html => {class: "form-horizontal", role: "form"}) do |n| %>
    <div class="form-group">
    <div class="control-label col-sm-2">
    <%= n.label :title %>
    </div>
    <div class="col-sm-8">
      <%= n.text_field :title, class: "form-control", placeholder: "title of article", autofucs: true %>
    </div>
  </div> <!--form group-->
  <div class="form-group">
  <div class="control-label col-sm-2">
    <%= n.label :description %>
  </div>
  <div class="col-sm-8">
    <%= n.text_area :description, rows: 10, class: "form-control", placeholder: "body of article" %>
  </div>
</div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= n.submit class: "btn btn-primary btn-lg btn-xlrg"%>
    </div>
  </div>
<% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and Back to articles listing", articles_path%> ]
    </div>
  </div>
</div>
